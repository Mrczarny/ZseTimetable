  "AllowedHosts": "*",
  "Database": "SQLServerContainer",
  "Scrappers": {
    "Timetable": [
      {
        "Name": "Classroom",
        "Pattern": "<.*?>(((<[^<>\\n]+(?<TeacherLink>(?<=\")[^<>\\n]*?\\.html).*?>)|)((?<Teacher>[^<>\\n]+)).*?\"((?<ClassLink>(?<=\").*?\\.html)|).*?>(?<teacherName>[^<>\\n\\s]+)<.*?\"((?<classroomLink>(?<=\").*?\\.html)|).*?>(?<LessonName>(?<!</a>|</span>)[^<>\\n]+)<.*?)(<br>|</td>|)",
        "RegexOptions": "12"
      },
      {
        "Name": "Teacher",
        "Pattern": "<.*?>(((<[^<>\\n]+(?<ClassLink>(?<=\")[^<>\n]*?\\.html).*?>)|)(((?<LessonName>[^-<>\\n]+).*?(?<GroupName>(?<=-)[^<> ]+))|(?<lessonName>[^<>\\n]+)).*?\"((?<teacherLink>(?<=\").*?\\.html)|).*?>(?<teacherName>[^<>\\n\\s]+)<.*?\"((?<classroomLink>(?<=\").*?\\.html)|).*?>(?<classroomName>(?<!</a>|</span>)[^<>\\n]+)<.*?)(<br>|</td>|)",
        "RegexOptions": "12"
      },
      {
        "Name": "Class",
        "Pattern": "<.*?>((((?<lessonName>[^-<>\\n]+).*?(?<GroupName>(?<=-)[^<> ]+))|(?<lessonName>[^<>\\n]+)).*?\"((?<teacherLink>(?<=\").*?\\.html)|).*?>(?<teacherName>[^<>\\n\\s]+)<.*?\"((?<classroomLink>(?<=\").*?\\.html)|).*?>(?<classroomName>(?<!</a>|</span>)[^<>\\n]+)<.*?)(<br>|</td>|)",
        "RegexOptions": "12"
      },
      {
        "Name": "ScrapRawTable",
        "Pattern": "<tr>.*?nr\">(?<lessonNumber>\\d+).*?g\">(?<lessonHours>.*?)<.*?(?<lessons><td.*?)</tr>",
        "RegexOptions": "24"
      },
      {
        "Name": "Scrap",
        "Pattern": "<body>.*?tytulnapis\">(?<Title>.+?)<.+?(?<Table><table.+?</table>).*?obowiÄ…zuje od: (?<startDate>\\d{2}\\.\\d{2}\\.(\\d{4}|\\d{2}))(.*? do (?<endDate>\\d{2}\\.\\d{2}\\.\\d{4}).*?|.*?)</body>",
        "RegexOptions": "29"
      }
    ],
    "Changes": [
      {
        "Name": "Scrap",
        "Pattern": "<nobr>(?<replacementHeader>.*?(?<replacementDate>\\d{1,2}\\.\\d{1,2}\\.\\d{4}).*?)</nobr>.*?(?<replacements><tr>.*</tr>)",
        "RegexOptions": "24"
      },
      {
        "Name": "ScrapTeacherReplacements",
        "Pattern": "<tr>[^<]*?<td[^<]*?(?<TeacherName>\\w+( \\w+)+)[^<]*?</td>[^<]*?</tr>(?<rawClassReplacements>.*?)",
        "RegexOptions": "92"
      },
      {
        "Name": "ScrapClassReplacements",
        "Pattern": "<tr>.*?>\\s*?(?<lessonNumber>\\d+)\\s*?<.*?<td.*?>\\s*?(?<Description>\\S[^<>]+?)\\s*?<.*?<td.*?>\\s*?(?<Sub>\\S[^<>]+?)\\s*?<.*?<td.*?>\\s*?(?<Note>\\S[^<>]+?)\\s*?<.*?</tr>",
        "RegexOptions": "24"
      }
    ],
    "Types": [
      {
        "type": "Class", 
        "letter": "o"
      },
      {
        "type": "Classroom",
        "letter": "s"
      },
      {
        "type": "Teacher",
        "letter": "n"
      }
    ]
  }
